@model StudentEditModel
<form id="f" name="f" data-db-type="student" data-db-action="edit" data-controller-action="EditStudent">
    <div class="row">
        <div class="col-9">
            <input type="hidden" asp-for="StudentId" />
            <div class="form-group row mb-1">
                <label asp-for="StudentName" class="col-form-label col-3"></label>
                <div class="col-9">
                    <input asp-for="StudentName" class="form-control" />
                    <span asp-validation-for="StudentName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="AnnualCost" class="control-label col-3"></label>
                <div class="col-9">
                    <input asp-for="AnnualCost" class="form-control" />
                    <span asp-validation-for="AnnualCost" class="text-danger"></span>
                </div>
            </div>
         </div>
            <div class="form-group row mb-1">
                <label asp-for="Picture" class="control-label col-3"></label>
                <div class="col-9">
                    <input type="file" asp-for="Picture" class="form-control col-2" />
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
            </div>
             <div class="form-group row mb-1">
                <label asp-for="Continuing" class="control-label col-3"></label>
                <div class="col-9">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="Continuing" checked>
                    </div>
                    <span asp-validation-for="Continuing" class="text-danger"></span>
                </div>
              </div>
        </div>   
        <div class="col-3">
            <img src="/Pictures/@ViewData["CurrentPic"]" style="width:150px" class="img-thumbnail" />
        </div>
    </div>
</form>